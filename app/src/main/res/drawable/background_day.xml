<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 상단 테두리 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <stroke android:width="1dp" android:color="#DDDDDD" />
            <padding
                android:top="1dp"
                android:right="-1dp"
                android:left="-1dp"
                android:bottom="-1dp" />
        </shape>
    </item>

    <!-- 배경 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>
