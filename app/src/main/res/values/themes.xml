<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Lets_meet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">#000000</item>
        <item name="colorPrimary">#3F7BF1</item>

        <item name="android:outlineProvider">none</item>

        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="editTextStyle">@style/EdittextStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>


    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_round</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/suit_bold</item>
    </style>

    <style name="EdittextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/text3</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:backgroundTint">@color/sub3</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

    <style name="Theme.Lets_meet" parent="Base.Theme.Lets_meet" />

    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/suit_semibold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/text1</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="HyperlinkBlue">
        <item name="android:textColor">@color/main</item>
        <item name="android:textSize">12dp</item>
        <item name="fontFamily">@font/suit_medium</item>
        <item name="android:background">@drawable/hyperlink_underline_blue</item>
    </style>

    <style name="HyperlinkBlack">
        <item name="android:textColor">@color/text1</item>
        <item name="android:textSize">12dp</item>
        <item name="fontFamily">@font/suit_medium</item>
        <item name="android:background">@drawable/hyperlink_underline_black</item>
    </style>

</resources>